<div class="jumbotron">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  <p class="lead">
    Email: <%= @friend.email %></br>
    Phone: <%= @friend.phone %></br>
    Twitter: <%= @friend.twitter %></br>
  </p>
  <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-dark" %>
  <%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
  <%= link_to 'Back', friends_path, class:"btn btn-secondary" %>
</div>
